{
  "name": "@talk-legally/api-gateway",
  "version": "1.0.0",
  "description": "API Gateway",
  "main": "dist/api-gateway/src/main.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node dist/api-gateway/src/main.js",
    "start:dev": "concurrently \"tsc -w\" \"tsc-alias -w\" \"nodemon --watch dist/api-gateway/src --delay 2 dist/api-gateway/src/main.js\"",
    "start:prod": "node dist/api-gateway/src/main.js"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/microservices": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/throttler": "^4.2.0",
    "@nestjs-modules/ioredis": "^1.0.0",
    "axios": "^1.4.0",
    "class-validator": "^0.14.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@types/node": "^20.3.1",
    "@types/winston": "^2.4.4",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.1.3"
  }
}
