{
  "name": "@talk-legally/wallet-service",
  "version": "1.0.0",
  "description": "Wallet and Transaction Service",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node dist/services/wallet-service/src/main.js",
    "start:dev": "concurrently \"tsc -w\" \"tsc-alias -w\" \"nodemon --watch dist/services/wallet-service/src --delay 2 dist/services/wallet-service/src/main.js\"",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/services/wallet-service/src/main.js"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/microservices": "^10.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.4.5",
    "pg": "^8.11.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@types/node": "^20.3.1",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.1.3"
  }
}