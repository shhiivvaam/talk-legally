{
  "name": "@talk-legally/payment-service",
  "version": "1.0.0",
  "description": "Payment Gateway Integration Service",
  "main": "dist/services/payment-service/src/main.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node dist/services/payment-service/src/main.js",
    "start:dev": "concurrently \"tsc -w\" \"tsc-alias -w\" \"nodemon --watch dist/services/payment-service/src --delay 2 dist/services/payment-service/src/main.js\"",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/services/payment-service/src/main.js"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "axios": "^1.4.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "razorpay": "^2.9.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@types/node": "^20.3.1",
    "@types/winston": "^2.4.4",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.1.3"
  }
}